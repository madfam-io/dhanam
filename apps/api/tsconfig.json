{
  "extends": "@dhanam/config/typescript/nestjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": false,
    "jsx": "react",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "~/*": ["./src/*"],
      "@modules/*": ["./src/modules/*"],
      "@core/*": ["./src/core/*"],
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}