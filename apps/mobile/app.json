{
  "expo": {
    "name": "Dhanam Ledger",
    "slug": "dhanam-ledger",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dhanam.ledger",
      "buildNumber": "1",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to authenticate and secure your financial data",
        "NSCameraUsageDescription": "Camera access is required to scan QR codes for account linking"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "package": "com.dhanam.ledger",
      "versionCode": 1,
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Dhanam Ledger to use Face ID for secure authentication"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Dhanam Ledger to access camera for QR code scanning"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#1a1a1a"
        }
      ]
    ],
    "scheme": "dhanam",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "dhanam-ledger-mobile"
      }
    }
  }
}